@using Clients.Shared

<h3 class="text-center">@PillWarning.Header</h3>

<div class="row">
    <div class="col">
        <table>
            @foreach (var entry in PillWarning.GeneralInfos)
            {
                <tr>
                    <td>@entry.Key</td>
                    <td style="padding:0 15px 0 15px;">@entry.Value</td>
                </tr>
            }
        </table>
    </div>
    <div class="col">
        <div class="pill-image">
            <Image Content="PillWarning.Image"></Image>
        </div>
    </div>
</div>

<p></p>

<h4>@PillWarning.RiskEstimationTitle</h4>
<p>@PillWarning.RiskEstimation</p>

@foreach (var info in PillWarning.Infos)
{
    <h4>@info.Title</h4>
    <p>@info.Info</p>
}

<h4>@PillWarning.SaferUseRulesTitle</h4>
<ul>
    @foreach (var rule in PillWarning.SaferUseRules)
    {
        <li>@rule</li>
    }
</ul>

@code {

    [Parameter]
    public PillWarning PillWarning { get; set; }

}
